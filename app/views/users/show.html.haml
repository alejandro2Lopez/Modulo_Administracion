= render "layouts/flash"
.div.m-4
  .page.header_new
    %h2 
      =t('activerecord.modules.user.one')
    .card
      %img{:height => "250", :src => "https://img.icons8.com/windows/512/contacts.png", :width => "250"}/   
      .container
        %h5
          =t('activerecord.attributes.user.name')
          %p 
            = @user.name
        %h5 
          =t('activerecord.attributes.user.mail')
        %h5 
          %p 
            = @user.mail
        %h5
          =t('activerecord.attributes.user.address')
        %h5 
          %p 
            =  @user.address
        %h5
          =t('activerecord.attributes.user.role')
        %h5 
          %p 
            =  @user.role
    .row.mt-3
      .offset-3.col-3
        = link_to t('application.back'), users_path, class: "button_Back button_Back"
